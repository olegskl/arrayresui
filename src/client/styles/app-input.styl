.app-input
  flex 0 0 50%
  display flex
  flex-direction column

  // .app-input__header
  &__header
    flex 0 0 5rem
    display flex
    align-items center
    background-color lighten(#1c1c1c, 5%)
    border-bottom 1px solid lighten(#1c1c1c, 10%)

  // .app-input__control-group
  &__control-group
    flex 1
    display flex
    justify-content space-around

    label
      display block

  // .app-input__submit
  &__submit
    padding 1rem
    height 5rem
    border none
    color #fafafa
    outline none
    cursor pointer
    background-color #fc803a

    &:disabled
      text-decoration line-through

  // .app-input__editor
  &__editor
    flex 1
    margin .5rem 0 0 0
